@model SlotsViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>

    <title>Online Tutoring Center - Student Home Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        h2 {
            font-size: 28px;
            color: #333;
            margin-top: 0;
        }

        header,
        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1rem 0;
        }

            header h1,
            footer p {
                margin: 0;
                padding: 0.5rem 0;
            }

        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
        }

            nav ul li {
                margin: 0 1rem;
            }

                nav ul li a {
                    text-decoration: none;
                    color: white;
                    font-weight: bold;
                }

                    nav ul li a:hover {
                        color: #ccc;
                    }

        section {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            width: 100%;
            padding: 2rem;
            box-sizing: border-box;
            margin: 0 auto;
            min-height: 70vh;
        }

            section > div {
                flex: 1;
                margin: 0 1rem;
                max-width: calc(33.33% - 2rem);
                box-sizing: border-box;
            }

        .departments {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
            margin: 0 -1rem;
        }

        .department {
            flex: 0 0 auto;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin: 1rem;
            padding: 2rem;
            text-align: center;
            width: 300px;
            position: relative;
        }

            .department img {
                max-width: 100%;
                height: auto;
            }

            .department a {
                display: block;
                font-size: 1.2rem;
                color: #333;
                text-decoration: none;
                margin-bottom: 1rem;
            }

        h2 {
            font-size: 28px;
            color: #333;
            margin-top: 0;
            text-align: center;
            padding: 10px 0px;
        }

        .department a:hover {
            color: #666;
        }

        .btn {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            border: none;
            border-radius: 5px;
            padding: 0.5rem 1rem;
            cursor: pointer;
            font-size: 1rem;
        }

            .btn:hover {
                background-color: dimgrey;
            }
    </style>



    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!---->
    <link rel="stylesheet" href="~/styles.css">
</head>
<body>
    
    <h2>Departments</h2>
    <section>


        <div class="department" id="View Professors">

            <img src="~/Images/c_s.jpeg" alt="Department 2">
            <a>Computer Science</a>
            @using (Html.BeginForm("CoordinatorViewProfessor", "Home", FormMethod.Get))
            {
                <input type="hidden" id="StudentName" name="StudentName" value="@Model.StudentUserName" />

                <button type="submit" class="btn btn-primary">View Tutors</button>

            }
        </div>
        <div class="department">
            <img src="~/Images/English.jpeg" alt="Department 3">
            <a href="#">English</a>
            @using (Html.BeginForm("ViewProfessors", "Home", FormMethod.Get))
            {

                <button type="submit" class="btn btn-primary">View Tutors</button>

            }
        </div>

        <div class="department">
            <img src="~/Images/IT.jpeg" alt="Department 6">
            <a href="#">Information Technology</a>
            @using (Html.BeginForm("ViewProfessors", "Home", FormMethod.Get))
            {

                <button type="submit" class="btn btn-primary">View Tutors</button>

            }
        </div>

        <div class="department">
            <img src="~/Images/mathh.jpeg" alt="Department 7">
            <a href="#">Mathematics</a>
            @using (Html.BeginForm("ViewProfessors", "Home", FormMethod.Get))
            {

                <button type="submit" class="btn btn-primary">View Tutors</button>

            }
        </div>

    </section>

    <footer>
        <p> &copy; 2023 Online Tutoring Center. All rights reserved.</p>
    </footer>
</body>
</html>