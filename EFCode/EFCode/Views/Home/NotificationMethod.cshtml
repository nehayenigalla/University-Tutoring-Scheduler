<!--SEProjectCode.Models.Homepagemodel -->
@model EFCode.Models.Homepagemodel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box
        }

        body {
            font-family: "Lato", sans-serif;
        }

        /* Style the header */
        header {
            background-image: url('/Images/lsu5.jpeg');
            height: 200px;
            padding: 60px;
            text-align: center;
            font-size: 20px;
            color: white;
        }

        /* Style the tab */
        .tab {
            float: left;
            padding: 0px 12px;
            border: 1px solid #ccc;
            width: 70%;
            border-left: none;
            height: 250px;
            background-color: #fff;
            margin: 100px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 400px;
        }

            /* Style the buttons inside the tab */
            .tab button {
                display: block;
                background-color: inherit;
                color: black;
                padding: 22px 16px;
                width: 100%;
                border: none;
                outline: none;
                text-align: left;
                cursor: pointer;
                transition: 0.3s;
                font-size: 17px;
            }

                /* Change background color of buttons on hover */
                .tab button:hover {
                    background-color: #ddd;
                }

                /* Create an active/current "tab button" class */
                .tab button.active {
                    background-color: #ccc;
                }

        /* Style the tab content */

        .tabcontent {
            float: left;
            padding: 0px 12px;
            border: 1px solid #ccc;
            width: 70%;
            border-left: none;
            height: 250px;
            background-color: #fff;
            margin: 100px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 600px;
        }

        /* Style the footer */
        footer {
            background-color: #808080;
            background-image: url('/Images/lsu5.jpeg');
            position: fixed;
            bottom: 0px;
            left: 0px;
            right: 0px;
            width: 100%;
            color: white;
            height: 12%;
        }

        h3 {
            text-align: center;
            color: #333;
            margin-top: 0;
        }

        #Login label {
            display: inline-block;
            width: 200px; /* adjust the width as needed */
            text-align: match-parent;
        }

    </style>
</head>
<body>

    <script>        function openMenu(evt, menuName) {
            var i, tablinks;
            var tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(menuName).style.display = "block";
            evt.currentTarget.className += " active";
        }

        // Get the element with id="defaultOpen" and click on it
        document.getElementById("defaultOpen").click();</script>

    <header>
        <font face="Lucida Calligraphy">
            <h2>Welcome to Online University Tutoring Center</h2>
        </font>
    </header>

    
    <form asp-controller="Home" asp-action="RequestStatus" method="post">
   
    
        <input type="text" asp-for="RequestId" />
    <div id="Notifications" class="tabcontent">
       <!-- <h3>Notifications</h3>
            <div class="form-group">
                <div class="alert alert-danger">@ViewBag.Message</div>
                <li>@Model.message</li>
            </div>
            -->

        <p>Student Requests:</p>
        <ul>
                @for (int i = 0; i < Model.RequestId.Count; i++)
                {
                    <p>@Model.Requestmessage[i]</p>
                    <label>Would you like to accept the request or reject it?</label>
                    <div>
                        <input type="radio" id="Accept" name="RequestStatus" value="Accept" />
                        <label for="Accept">Accept</label>
                    </div>
                    <div>
                        <input type="radio" id="Reject" name="RequestStatus" value="Reject" />
                        <label for="Reject">Reject</label>
                    </div>
                    <div>
                        <input type="submit" id="RequestId" name="RequestId" value="@Model.RequestId[i]"/>


                    </div>

                    
                    
                }
            
        </ul>
            
        
    </div>
    </form>
    

   
</body>
</html>


