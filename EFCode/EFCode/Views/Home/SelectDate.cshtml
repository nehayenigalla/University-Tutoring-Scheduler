@model SlotsViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>

    <title>Online Tutoring Center - Student Home Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        h2 {
            font-size: 28px;
            color: #333;
            margin-top: 0;
        }

        header,
        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 1rem 0;
        }

            header h1,
            footer p {
                margin: 0;
                padding: 0.5rem 0;
            }

        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
        }

            nav ul li {
                margin: 0 1rem;
            }

                nav ul li a {
                    text-decoration: none;
                    color: white;
                    font-weight: bold;
                }

                    nav ul li a:hover {
                        color: #ccc;
                    }

        section {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            width: 100%;
            padding: 2rem;
            box-sizing: border-box;
            margin: 0 auto;
            min-height: 70vh;
        }

            section > div {
                flex: 1;
                margin: 0 1rem;
                max-width: calc(33.33% - 2rem);
                box-sizing: border-box;
            }

       

        h2 {
            font-size: 28px;
            color: #333;
            margin-top: 0;
            text-align: center;
            padding: 10px 0px;
        }

        .btn {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            border: none;
            border-radius: 5px;
            padding: 0.5rem 1rem;
            cursor: pointer;
            font-size: 1rem;
        }

            .btn:hover {
                background-color: dimgrey;
            }

        /* NEW CSS FOR TUTOR SECTION */

        .tutor {
            margin: 2rem auto;
            text-align: center;
        }

        input[type="date"] {
            padding: 0.5rem;
            margin-bottom: 1rem;
            border-radius: 5px;
            border: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            font-size: 1.2rem;
        }

        button[type="submit"] {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            border: none;
            border-radius: 5px;
            padding: 0.5rem 1rem;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.2s;
        }

            button[type="submit"]:hover {
                background-color: #388E3C;
            }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!---->
    <link rel="stylesheet" href="~/styles.css">
</head>
   <body>
    <header>
        <h1>Welcome to the Online Tutoring Center </h1>
        <nav>
            <ul>
                <li><a href="#"><h3>Home</h3></a></li>
                <li><a href="ContactCoordinator"><h3>Contact Coordinator</h3></a></li>
                <li><a href="#"><h3>My Appointments</h3></a></li>
                <li><a href="#"><h3>Profile</h3></a></li>
                <li><a href="Homepage" style="color: red;"><h3>Logout</h3></a></li>
            </ul>
        </nav>
    </header>
    <h2>Date Selection</h2>
    <section>
        <div class="tutor">
            <form method="post" action="@Url.Action("SetAvailability", "Home")">
                <input type="date" name="date" />
                <button type="submit">Set availability for this date</button>
            </form>
        </div>
    </section>
    <footer>
        <p> &copy; 2023 Online Tutoring Center. All rights reserved.</p>
    </footer>
</body>
</html>