<!--SEProjectCode.Models.Homepagemodel -->
@model EFCode.Models.Homepagemodel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box
        }

        body {
            font-family: "Lato", sans-serif;
        }

        /* Style the header */
        header {
            background-image: url('/Images/lsu5.jpeg');
            height: 200px;
            padding: 60px;
            text-align: center;
            font-size: 20px;
            color: white;
        }

        /* Style the tab */
        .tab {
            float: left;
            padding: 20px 12px;
            border: 1px solid #ccc;
            width: 70%;
            border-left: none;
            height: 275px;
            background-color: #fff;
            margin: 100px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 400px;
        }

            /* Style the buttons inside the tab */
            .tab button {
                display: block;
                background-color: inherit;
                color: black;
                padding: 22px 16px;
                width: 100%;
                border: none;
                outline: none;
                text-align: left;
                cursor: pointer;
                transition: 0.3s;
                font-size: 17px;
            }

                /* Change background color of buttons on hover */
                .tab button:hover {
                    background-color: #ddd;
                }

                /* Create an active/current "tab button" class */
                .tab button.active {
                    background-color: #ccc;
                }

        /* Style the tab content */

        .tabcontent {
            float: left;
            padding: 20px 12px;
            border: 1px solid #ccc;
            width: 70%;
            border-left: none;
            height: 275px;
            background-color: #fff;
            margin: 100px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 600px;
        }

        /* Style the footer */
        footer {
            background-color: #808080;
            background-image: url('/Images/lsu5.jpeg');
            position: fixed;
            bottom: 0px;
            left: 0px;
            right: 0px;
            width: 100%;
            color: white;
            height: 12%;
        }

        h3 {
            text-align: center;
            color: #333;
            margin-top: 0;
        }

        #Login label {
            display: inline-block;
            width: 200px; /* adjust the width as needed */
            text-align: match-parent;
        }
    </style>
</head>
<body>

    <script>
        function openMenu(evt, menuName) {
            var i, tablinks;
            var tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(menuName).style.display = "block";
            evt.currentTarget.className += " active";
        }

        // Get the element with id="defaultOpen" and click on it
        document.getElementById("defaultOpen").click();</script>

    <header>
        <font face="Lucida Calligraphy">
            <h2>Welcome to Online University Tutoring Center</h2>
        </font>
    </header>

    <div class="tab">
        <button class="tablinks" onclick="openMenu(event, 'Welcome')" id="defaultOpen">Welcome</button>
        <button class="tablinks" onclick="openMenu(event, 'Login')">Login</button>
        <button class="tablinks" onclick="openMenu(event, 'Register')">Register</button>
    </div>

    <div id="Welcome" class="tabcontent">
        <h3>Welcome</h3>
        <font face="Lucida Calligraphy">
            <p> To encourage students in achieving their academic objectives, this tutoring website offers professional and individualized tutoring services. The website offers flexible scheduling and reasonable costs since it thinks that education should be available to everyone. The subjects that are provided are math, computer science, English, and IT. All ages and intellectual levels of students can benefit from the tutoring services. </p>

    </div>

    <div id="Login" class="tabcontent">
        <h3>Login</h3><br>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.Username, new { @class = "control-label" })
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Login</button>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
        }
    </div>
    <div id="Register" class="tabcontent">
        <h3>Don't have an account ? Click below for Registration</h3>
        <table>
            <tr>
                <td><input type="button" value="Register" onclick="location.href='@Url.Action("Registration", "Home")'"></td>
            </tr>
        </table>
    </div>

    <footer>
        <div id="footer-line">
            <img src="/Images/all.png" alt="backtotop" align="left" style="width:20px;height:20px;border:0;">
            <p>&copy; 2023 Louisiana State University. All Rights Reserved.</p>

            <div id="txt" align="right"></div>
        </div>
    </footer>
</body>
</html>


